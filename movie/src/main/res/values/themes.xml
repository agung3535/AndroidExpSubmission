<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SimpleCatalogueMovie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomImageMovieDetail">
        <item name="cornerSizeBottomLeft">100%</item>
        <item name="cornerSizeBottomRight">100%</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="CustomRoundedImage">
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
        <item name="strokeWidth">5dp</item>
        <item name="strokeColor">#050505</item>
    </style>


</resources>